<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.vcoders.on_demand_youtube_player.features.selectTopics.SelectTopicsActivity">

    <com.vcoders.on_demand_youtube_player.customView.TextViewPlus
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:textColor="@color/gray_title"
        android:textSize="@dimen/d16"
        app:customFont="@string/light"
        style="@style/TextSize_15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/please_choose_favorite_topics"/>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/txtTitle"
        android:layout_above="@+id/llFooter"
        android:id="@+id/rvSelectTopics"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/d20"
        android:layout_marginTop="@dimen/d50"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginTop="@dimen/d20"
        android:layout_alignParentBottom="true"
        android:id="@+id/llFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            style="@style/line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/d20"
            android:orientation="horizontal">
            <com.vcoders.on_demand_youtube_player.customView.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip"
                app:customFont="@string/light"
                android:textColor="@color/gray_unselected"
                style="@style/TextSize_15dp"/>

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_dot_selected"/>
                <ImageView
                    android:layout_marginHorizontal="@dimen/d12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_dot_unselected"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_dot_unselected"/>
            </LinearLayout>
            <com.vcoders.on_demand_youtube_player.customView.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                app:customFont="@string/medium"
                android:textSize="@dimen/d16"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray_E2"
                style="@style/TextSize_15dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
