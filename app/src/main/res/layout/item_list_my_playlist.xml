<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llItemMyPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llCreateNewPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d45"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/d5"
                android:layout_height="match_parent"
                android:background="@color/blue_center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d10"
                android:src="@mipmap/ic_menu" />

            <com.vcoders.on_demand_youtube_player.customView.TextViewPlus
                style="@style/TextSize_15dp"
                android:layout_width="wrap_content"
                android:id="@+id/txtName"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d10"
                android:paddingRight="@dimen/d10"
                android:text="@string/create_new_playlist" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>